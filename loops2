// print 
/* *
   **
   ***
   ****
   *****
   print this pattern using loops
*/

for (let i = 1; i <= 5; i++) {
  let stars = '';
  for (let j = 1; j <= i; j++) {
    stars += '*';
  }
  document.write(stars+"<br>");
}

const n = 5;
for (let i = 1; i <= n; i++) {
  let row = '';
  for (let j = i; j < n; j++) {
    row += ' ';
  }
  for (let k = 1; k <= (2 * i - 1); k++) {
    row += '*';
  }
  document.write(row+'<br>');
}

for(let i=1;i<=5;i++){
            for(let j=1;j<=i;j++){
                document.write("* ")
            }
            document.write("<br>")
        }





  </script>
