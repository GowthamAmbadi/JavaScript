<body>
  <script>
    
// for in loop 
// to iterate the charater or string we use the for in loop
// syntax

    const s = "kavya"
    for (let i in s){
      document.write(s[i])
    }

    document.write('<br>')

    const a=["ravi","sam","yuvan"]
    for (let i in a){
      document.write(a[i])
    }
    document.write('<br>')


// while loop:
// --for loop
// --infinite (unknown)

// syntax:
// while(condition){
// block of code
// }
// 1) condition inside ( )
// 2) { }
// 3) false
//ex - 1 - 5
//while loop 1-5
      let i = 2,n=8; //inti
      while (i <= n) { // condition
        document.write(i+1) //block of code
        i=i+2 //updation
      }
      document.write('<br>')

// do while
// syntax
// do{
// //blockofcode
// }while(condition) // false
// example
//This loop will print the numbers from 0 to 4 to the console. Here's a step-by-step breakdown:
      let o = 0;
      do {
        document.write(o);
        o++;
        } while (o < 5);
        //This loop will print the numbers from 0 to 4 to the console. Here's a
    
        document.write('<br>')
      
        for (let p = 1; p <= 8; p = p + 2) {
          if (p == 4) {
            break;
          }
          document.write(p);
        }

  </script>
